# General
# theme = catppuccin-frappe
shell-integration = zsh

# Clipboard
clipboard-read = allow
clipboard-write = allow
copy-on-select = true

# Window (remove all styling)
macos-non-native-fullscreen = false
macos-titlebar-style = hidden
window-decoration = none
window-padding-x = 0
window-padding-y = 0

# Background
background-opacity = 0.85
background-blur = 20

# Font
font-size = 18
font-family = "MesloLGS Nerd Font Mono"
font-family-bold = "MesloLGS Nerd Font Mono"
font-family-italic = "MesloLGS Nerd Font Mono"
font-family-bold-italic = "MesloLGS Nerd Font Mono"
font-style = bold
font-style-bold = bold
font-style-italic = bold-italic
font-style-bold-italic = bold-italic

# Misc
macos-option-as-alt = true
macos-icon = official

# ---

# Keybinds

# CMD + p -> Esc + p
# Allow CMD + p to be used in neovim with tmux
keybind = cmd+p=esc:p

# CMD + [1-9] -> TmuxLeader + [1-9]
# Switch to window in tmux
keybind = cmd+1=text:\x131
keybind = cmd+2=text:\x132
keybind = cmd+3=text:\x133
keybind = cmd+4=text:\x134
keybind = cmd+5=text:\x135
keybind = cmd+6=text:\x136
keybind = cmd+7=text:\x137
keybind = cmd+8=text:\x138
keybind = cmd+9=text:\x139

# CMD + t ->  TmuxLeader + t
# Open new window in tmux
keybind = cmd+t=text:\x13t

# CMD + \ -> TmuxLeader + ^
# New horizontal split in tmux
keybind = cmd+\=text:\x13^

# CMD + - -> TmuxLeader + %
# New vertical split in tmux
keybind = cmd+-=text:\x13%

# CMD + w -> TmuxLeader + &
# Close pane in tmux
keybind = cmd+w=text:\x13x

# CMD + c -> TmuxLeader + c
# Close window in tmux
keybind = cmd+c=text:\x13c

# ---
