# General

# theme = Catppuccin Frappe
theme = Nord

shell-integration = zsh

# Clipboard
clipboard-read = allow
clipboard-write = allow
copy-on-select = true

# Window (remove all styling)
macos-non-native-fullscreen = false
macos-titlebar-style = hidden
# TODO: Move this to linux ghostty config
# This disables rounded corners on macOS
# window-decoration = none
window-padding-x = 0
window-padding-y = 0

# Background
background-opacity = 0.85
background-blur = 20

# Font
font-size = 18
font-style = semibold
font-family = "JetBrainsMono Nerd Font Mono"
# font-family = "VictorMono Nerd Font Mono"
# font-family-bold = "VictorMono NFM Oblique"
# font-family-italic = "VictorMono NFM Oblique"
# font-family-bold-italic = "VictorMono NFM Oblique"

# Misc
macos-option-as-alt = true
macos-icon = official

# ---

# Keybinds

# CMD + p -> Esc + p
# Allow CMD + p to be used in neovim with tmux
keybind = cmd+p=esc:p

# CMD + [1-9] -> TmuxLeader + [1-9]
# Switch to window in tmux
keybind = cmd+Digit1=text:\x131
keybind = cmd+Digit2=text:\x132
keybind = cmd+Digit3=text:\x133
keybind = cmd+Digit4=text:\x134
keybind = cmd+Digit5=text:\x135
keybind = cmd+Digit6=text:\x136
keybind = cmd+Digit7=text:\x137
keybind = cmd+Digit8=text:\x138
keybind = cmd+Digit9=text:\x139

# CMD + t ->  TmuxLeader + t
# Open new window in tmux
keybind = cmd+t=text:\x13t

# CMD + \ -> TmuxLeader + ^
# New horizontal split in tmux
keybind = cmd+\=text:\x13^

# CMD + - -> TmuxLeader + %
# New vertical split in tmux
keybind = cmd+-=text:\x13%

# CMD + w -> TmuxLeader + &
# Close pane in tmux
keybind = cmd+w=text:\x13x

# CMD + c -> TmuxLeader + c
# Close window in tmux
keybind = cmd+c=text:\x13c

# Claude Code - New line
keybind = shift+enter=text:\x1b\r

# ---
