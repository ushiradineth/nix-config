{
  "$schema": "https://opencode.ai/config.json",
  "model": "openai/gpt-5.3-codex",
  "small_model": "openai/gpt-5.1-codex-mini",
  "default_agent": "plan",
  "theme": "system",
  "autoupdate": false,
  "lsp": false,
  "plugin": ["cc-safety-net", "opencode-openai-codex-auth"],
  "provider": {
    "openai": {
      "options": {
        "reasoningEffort": "medium"
      }
    }
  },
  "agent": {
    "plan": {
      "description": "Research-heavy planning mode with focused questions and executable plans",
      "temperature": 0.1,
      "steps": 30,
      "prompt": "{file:./prompts/plan.md}",
      "permission": {
        "question": "allow",
        "task": {
          "*": "allow",
          "explore": "allow",
          "general": "allow"
        },
        "read": "allow",
        "glob": "allow",
        "grep": "allow",
        "list": "allow",
        "webfetch": "allow",
        "websearch": "allow",
        "bash": "allow",
        "edit": {
          "*": "deny",
          ".opencode/plans/**/*.md": "allow",
          ".agents/MEMORIES.md": "allow",
          ".agents/PROGRESS.md": "allow"
        }
      }
    },
    "init_agents_md": {
      "description": "Generate repo-specific AGENTS.md files from real project context",
      "temperature": 0.1,
      "steps": 40,
      "prompt": "{file:./prompts/init-agents-md.md}",
      "permission": {
        "question": "allow",
        "task": {
          "*": "allow",
          "explore": "allow",
          "general": "allow"
        },
        "read": "allow",
        "glob": "allow",
        "grep": "allow",
        "list": "allow",
        "webfetch": "allow",
        "websearch": "allow",
        "bash": "allow",
        "edit": {
          "*": "deny",
          "AGENTS.md": "allow",
          "**/AGENTS.md": "allow",
          ".github/agents/*.md": "allow"
        }
      }
    }
  },
  "permission": {
    "read": "allow",
    "edit": "allow",
    "bash": "allow",
    "glob": "allow",
    "list": "allow",
    "grep": "allow",
    "webfetch": "allow",
    "websearch": "allow",
    "task": "allow",
    "skill": "allow",
    "lsp": "allow",
    "external_directory": "allow"
  }
}
